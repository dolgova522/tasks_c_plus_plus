#include <iostream>
#include <vector>

int CountAlive(const std::vector<std::vector<int>>& field, int x, int y) {
  int alive_neighbour = 0;
  for (int i = -1; i <= 1; ++i)
    for (int j = -1; j <= 1; ++j)
      if ((i || j) && (x + i >= 0) && (x + i < 10) && (y + j >= 0) && (y + j < 10))
        alive_neighbour += field[x + i][y + j];
  return alive_neighbour;
}

void Show(const std::vector<std::vector<int>>& field) {
  for (int i = 0; i < 10; ++i) {
    for (int j = 0; j < 10; ++j)
      std::cout << (field[i][j] ? '*' : ' ');
    std::cout << "\n";
  }
  std::cout << "----------\n";
}

bool Empty(const std::vector<std::vector<int>>& a) {
  for (auto& r : a) {
    for (int x : r) {
      if (x) {
        return false;
      }
    }
  }
  return true;
}

bool Same(const std::vector<std::vector<int>>& field, const std::vector<std::vector<int>>& new_field) {
  return field == new_field;
}

int main() {
  srand(time(0));
  std::vector<std::vector<int>> field(10, std::vector<int>(10));
  for (int i = 0; i < 10; ++i) {
    for (int j = 0; j < 10; ++j) {
      field[i][j] = rand() % 2;
    }
  }
  while (true) {
    Show(field);
    std::vector<std::vector<int>> new_field = field;
    for (int i = 0; i < 10; ++i) {
      for (int j = 0; j < 10; ++j) {
        int k = CountAlive(field, i, j);
        if (field[i][j]) {
          new_field[i][j] = (k == 2 || k == 3);
        }
        else {
          new_field[i][j] = (k == 3);
        }
      }
    }
    if (Empty(field) || Same(field, new_field)) {
      break;
    }
    field = new_field;

  }
  return 0;
}
