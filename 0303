#include <iostream>
#include <cassert>

class List {
    struct Node {
        int value;
        Node* next;
        Node(int v) : value(v), next(nullptr) {}
    };
    Node* head = nullptr;
    Node* tail = nullptr;
public:
    bool empty() const {
        return head == nullptr;
    }
    void push_front(int value) {
        Node* node = new Node(value);
        node->next = head;
        head = node;
        if (tail == nullptr)
            tail = node;
    }
    void push_back(int value) {
        Node* node = new Node(value);
        if (tail) {
            tail->next = node;
        }
        else {
          head = node;
        }
        tail = node;
    }
    void pop_front() {
        if (empty()) {
          return;
        }
        Node* tmp = head;
        head = head->next;
        delete tmp;
        if (head == nullptr) {
          tail = nullptr;
        }
    }
    void pop_back() {
        if (empty()) {
          return;
        }
        if (head == tail) {
            delete head;
            head = nullptr;
            tail = nullptr;
            return;
        }
        Node* cur = head;
        while (cur->next != tail) {
          cur = cur->next;
        }
        delete tail;
        tail = cur;
        tail->next = nullptr;
    }
    int get() const {
        if (empty()) {
          return 0;
        }
        Node* slow = head;
        Node* fast = head;
        while (fast && fast->next) {
            slow = slow->next;
            fast = fast->next->next;
        }
        return slow->value;
    }
    void show() const {
        Node* cur = head;
        while (cur) {
            std::cout << cur->value << " ";
            cur = cur->next;
        }
        std::cout << "\n";
    }
    ~List() {
        while (!empty()) {
          pop_front();
        }
    }
};

int main2() {
    List lst;
    assert(lst.empty());
    lst.push_back(1);
    lst.push_back(2);
    lst.push_back(3);
    lst.push_front(4);
    lst.show();
    assert(!lst.empty());
    assert(lst.get() == 2);
    lst.pop_front();
    lst.pop_back();
    lst.show();
    assert(lst.get() == 1 || lst.get() == 2);
    lst.pop_front();
    lst.pop_back();
    assert(lst.empty());
    return 0;
}
